// https://www.typescriptlang.org/tsconfig
// https://github.com/microsoft/TypeScript/blob/main/src/compiler/commandLineParser.ts
{
	"files": [
		"src/browser/Preload.ts",
		"src/browser/Main.ts",
		"src/renderer/Main.ts",
	],

	"compilerOptions": {
		// Diagnostics.Language_and_Environment
		"target": "ES2020",

		// Basic
		// Diagnostics.Modules
		"module": "ES2020",

		// Basic
		// Diagnostics.Emit
		"removeComments": true,
		"newLine": "LF",

		// Strict Type Checks
		// Diagnostics.Type_Checking
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"useUnknownInCatchVariables": true,
		"alwaysStrict": true,

		// Additional Checks
		// Diagnostics.Type_Checking
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"exactOptionalPropertyTypes": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,

		// Advanced
		// Diagnostics.Interop_Constraints
		"forceConsistentCasingInFileNames": true,

		// Module Resolution
		// Diagnostics.Modules
		"moduleResolution": "nodenext",
		"baseUrl": ".",
		"paths": {
			"vue": [
				"node_modules/vue/dist/vue.d.ts",
				"node_modules/vue/dist/vue.runtime.esm-bundler.js",
			],
			"@/*": [
				"src/*",
			],
		},
	}
}
