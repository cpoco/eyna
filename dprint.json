{
	"incremental": true,
	"useTabs": true,
	"typescript": {
		"semiColons": "asi",
		"useBraces": "always",
		"nextControlFlowPosition": "nextLine"
	},
	"includes": [
		"**/*.{ts,tsx,js,jsx,cjs,mjs}"
	],
	"excludes": [
		"build",
		"dist",
		"**/node_modules"
	],
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.84.1.wasm"
	]
}