body
	width: 100vw
	height: 100vh

root
	width: 100%
	height: 100%
	color: var(--foreground)
	background-color: var(--background)

	border: 1px solid transparent

	display: grid
	grid-template: \
		"navbar" calc(env(titlebar-area-height) - 1px) \
		"client" 1fr                                   \
		/ 1fr
