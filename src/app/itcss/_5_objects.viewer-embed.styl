.viewer-embed
	width: 100%
	height: 100%

	&-head
		width: 100%
		height: var(--viewer-head-height)
		line-height: var(--viewer-head-height)
		background-color: var(--background)
		margin: 0px 4px

	&-stat
		width: 100%
		height: var(--viewer-stat-height)
		background-color: var(--stat-active)

	&-prog
		width: 100%
		height: 100%
		background-color: rgba(255, 255, 255, 0.5)
		animation: indeterminate 1s infinite linear
		transform-origin: left center

	&-embed
		width: 100%
		height: var(--viewer-main-height)
		background-color: var(--background)
