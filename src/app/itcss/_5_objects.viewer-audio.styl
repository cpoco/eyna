.viewer-audio
	width: 100%
	height: 100%

	display: grid
	grid-template: \
		"audio-head" var(--dynamic-line-height) \
		"audio-stat" 2px                        \
		"audio-main" 1fr                        \
		/ 1fr

	&-head
		grid-area: audio-head
		overflow: hidden

		display: flex
		flex-direction: row
		flex-wrap: nowrap
		align-items: center
		margin: 0px 4px

		background-color: var(--background)

	&-stat
		grid-area: audio-stat
		overflow: hidden

		background-color: var(--stat-active)

	&-prog
		width: 100%
		height: 100%
		background-color: _white_a50
		animation: indeterminate 1s infinite linear
		transform-origin: left center

	&-back
		grid-area: audio-main
		overflow: hidden

		display: grid
		grid-template-rows: 1fr auto 1fr
		grid-template-columns: 12px auto 12px

		background-checkerboard()

	&-aud
		grid-area: 2 / 2
		overflow hidden
		place-self: center

		@media (max-width: 600px + 24px - 1px)
			width: 100%
		@media (min-width: 600px + 24px)
			width: 600px
