.viewer-audio
	width: 100%
	height: 100%

	display: grid
	grid-template: \
		"audio-head" var(--dynamic-line-height) \
		"audio-stat" 2px                        \
		"audio-main" 1fr                        \
		/ 1fr

	&-head
		grid-area: audio-head
		overflow: hidden

		display: flex
		flex-direction: row
		flex-wrap: nowrap
		align-items: center
		margin: 0px 4px

		background-color: var(--background)

	&-stat
		grid-area: audio-stat
		overflow: hidden

		background-color: var(--stat-active)

	&-prog
		width: 100%
		height: 100%
		background-color: rgba(255, 255, 255, 0.5)
		animation: indeterminate 1s infinite linear
		transform-origin: left center

	&-back
		grid-area: audio-main
		overflow: hidden

		display: grid
		grid-template-rows: minmax(8px, 1fr) auto minmax(8px, 1fr)
		grid-template-columns: minmax(8px, 1fr) auto minmax(8px, 1fr)

		background-color: var(--background)
		background-image:
			linear-gradient(45deg, #000 25%, transparent 25%, transparent 75%, #000 75%),
			linear-gradient(45deg, #000 25%, transparent 25%, transparent 75%, #000 75%)
		background-position: 0 0, 8px 8px
		background-size: 16px 16px

	&-aud
		grid-area: 2 / 2
		overflow hidden
		width: 600px
		max-width: 100%
