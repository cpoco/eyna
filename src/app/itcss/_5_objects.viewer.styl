:root
	--viewer-head-height: var(--dynamic-line-height)
	--viewer-stat-height: 2px
	--viewer-main-height: calc(100% - var(--viewer-head-height) - var(--viewer-stat-height))

.viewer
	&-fragment
		position: absolute
		overflow: hidden
		width: 100%
		height: 100%

// MonacoComponent MonacoDiffComponent
.viewer-monaco
	width: 100%
	height: 100%

	&-head
		width: 100%
		height: var(--viewer-head-height)
		line-height: var(--viewer-head-height)
		background-color: var(--background)
		margin: 0px 4px

	&-stat
		width: 100%
		height: var(--viewer-stat-height)
		background-color: var(--stat-active)

	&-prog
		width: 100%
		height: 100%
		background-color: rgba(255, 255, 255, 0.5)
		animation: indeterminate 1s infinite linear
		transform-origin: left center

	&-edit
		width: 100%
		height: var(--viewer-main-height)
		background-color: var(--background)

.editor-banner
	display: none !important

// ImageComponent
.viewer-image
	width: 100%
	height: 100%

	&-head
		width: 100%
		height: var(--viewer-head-height)
		line-height: var(--viewer-head-height)
