.system
	&-fragment
		position: absolute
		overflow: hidden
		width: 100%
		height: 100%

	&-dialog
		position: fixed
		top: auto
		bottom: 0px

		border-width: 0
		width: 100%
		min-width: initial
		max-width: initial

		background-color: transparent

	&-version
		display: flex
		flex-direction: row

		&-item
			padding: 4px
			margin-right: 2px
			display: flex
			flex-direction: column

			color: white
			background-color: rgba(0, 0, 0, 0.8)