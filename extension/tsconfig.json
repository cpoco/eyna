// https://www.typescriptlang.org/tsconfig
// https://github.com/microsoft/TypeScript/blob/main/src/compiler/commandLineParser.ts
{
	"files": [
		"src/extension.d.ts",

		"src/fs.copy.ts",
		"src/fs.duplicate.ts",
		"src/fs.mkdir.ts",
		"src/fs.move.ts",
		"src/fs.rename.ts",
		"src/fs.trash.ts",

		"src/list.code.ts",
		"src/list.terminal.ts",
		"src/list.test.ts",
	],

	"compilerOptions": {
		// Diagnostics.Language_and_Environment
		"target": "ES2020",

		// Basic
	   // Diagnostics.Modules
		"module": "CommonJS",

		// Basic
		// Diagnostics.Emit
		"removeComments": true,
		"newLine": "LF",

		// Basic
		// Diagnostics.Specify_an_output_folder_for_all_emitted_files
		"outDir": ".",

		// Strict Type Checks
		// Diagnostics.Type_Checking
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"useUnknownInCatchVariables": true,
		"alwaysStrict": true,

		// Additional Checks
		// Diagnostics.Type_Checking
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"exactOptionalPropertyTypes": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		// "noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,

		// Advanced
		// Diagnostics.Interop_Constraints
		"forceConsistentCasingInFileNames": true,
	}
}
